@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"] :: ROLP-Tech</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <!-- Bootstrap 3.3.5 -->
    <style type="text/css">
        .pre {
            position: relative;
            bottom: 0.5ex;
            font-size: 50%;
            left: 0.5ex;
        }
    </style>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link href="~/css/adminlte.css" rel="stylesheet" />
    <!-- iCheck -->
    <link href="~/lib/icheck/square/blue.css" rel="stylesheet" />
</head>
<body class="hold-transition login-page">

    <div class="login-box">
        <div class="login-logo">
			<a href="@Url.Action("Index", "Home")"><b>ARISE</b>s</a><span class="pre"> - pre</span>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg"></p>
            


            <div class="box box-solid">
                <div class="box-header with-border">
                    <h3 class="box-title">@ViewData["Title"]</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    Please check your email to reset your password.
                </div><!-- /.box-body -->
            </div><!-- /.box -->
			<a href="@Url.Action("Login", "Account")">Go back to Login Page.</a>
		<hr/>
			<a href="@Url.Action("ForgotPassword", "Account")">Re-send another email.</a>
        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->

    <h2></h2>
    <p>
        
    </p>

</body>
</html>
